.AccountPage
  .AccountPage__title
    %h2 会員情報登録
    %h5 新規アカウントの作成
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :name
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :password
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :password_confirmation
        .FormField__input--normal
          = f.password_field :password_confirmation, autocomplete: "off"

 
      .AccountPage__title__user
        %h3 お客様情報
        .FormField_name
          .FormField__label--normal
            = f.label :名字
            %i (氏)
            .FormField__input--normal
              = f.text_field :name, autofocus: true
          .FormField__label--normal
            = f.label :名前
            %i (名)
            .FormField__input--normal
              = f.text_field :name, autofocus: true
        .FormField_name
          .FormField__label--normal
            = f.label :名字
            %i (読みかな)
            .FormField__input--normal
              = f.text_field :name, autofocus: true
          .FormField__label--normal
            = f.label :名前
            %i (読みかな)
            .FormField__input--normal
              = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :生年月日
        .FormField__input--normal
          = f.text_field :name, autofocus: true
 


      .AccountPage__title__send
        %h4 送付先情報
      .FormField_name
        .FormField__label--normal
          = f.label :名字
          .FormField__input--normal
            = f.text_field :name, autofocus: true
        .FormField__label--normal
          = f.label :名前
          .FormField__input--normal
            = f.text_field :name, autofocus: true
      .FormField_name
        .FormField__label--normal
          = f.label :名字（ふりがな）
          .FormField__input--normal
            = f.text_field :name, autofocus: true
        .FormField__label--normal
          = f.label :名前（ふりがな）
          .FormField__input--normal
            = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :郵便番号
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :都道府県
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :市区町村
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :番地
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :マンション名（任意）
        .FormField__input--normal
          = f.text_field :name, autofocus: true

      .actions
        = f.submit "Create Account", class: 'Button UserButton'
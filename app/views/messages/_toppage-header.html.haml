%header.-header-wrapper
  .-header-top
    .-header-top__header
      .-header-top__header-contents
        = link_to '#' do
          = image_tag 'logo.png', alt: 'mercari-logo',
          class: '-header-top__header-contents--mercari-logo'
        .-header-top__header-search
          %form{ action: '/', method: 'post' }
            %input{ name: 'seach', class: '-header-top__header-search--search-form',
            placeholder: 'キーワードから探す' }
          .-header-top__header-search--search-btn
            = icon('fas', 'search', alt: 'search-icon',
            class: '-header-top__header-search--search-btn')
    .-header-top__footer

           
      .-header-top__footer-contents
        -# - if user_signed_in?
          .-header-top__footer-contents-wrapper
            .-header-top__footer-login
              %ul.-header-top__footer-login-contents
                %li.-header-top__footer-login-content
                  
                %li.-header-top__footer-login-content--notice
                  
                    .-header-top__footer-login-content--notice-count
                      99+
                  %ul.-header-top__footer-login-content--notice-lists
                    %li.-header-top__footer-login-content--notice-item
                      -# = link_to root_path do
                        %figure
                          -# = image_tag 'mercari_profile.png', alt: 'mercari-logo', size: '48x48', class: 'notice-mercari-logo'
                        .-header-top__footer-login-content--notice-item-body
                          .notice-item-text 事務局から個別メッセージ「ログイン通知」
                          
                        
                    %li.-header-top__footer-login-content--notice-item
                      -# = link_to root_path do
                        %figure
                          -# = image_tag 'mercari_profile.png', alt: 'mercari-logo', size: '48x48', class: 'notice-mercari-logo'
                        .-header-top__footer-login-content--notice-item-body
                          .notice-item-text 【明日まで！】スマホ出品で最大1000ポイントがもらえる
                          
                        

                %li.-header-top__footer-login-content--todo
                  
                  

                %li.-header-top__footer-login-content--mypage
                  -# = link_to root_path do
                    %figure
                      %div
                        -# = image_tag 'member_photo_noimage.png', alt: 'mypage-logo', width: '32px',
                        class: '-header-top__footer-login-content--mypage-header-user-icon'
                        %span
                          -# = link_to 'マイページ', '/mypage'
                    .-header-top__footer-login-content--mypage-box
                      .-header-top__footer-login-content--mypage-box-content
                        %figure
                          %div
                            -# = image_tag 'member_photo_noimage.png', alt: 'mypage-logo', width: '60px',
                            class: '-header-top__footer-login-content--mypage-pulldown-user-icon'
                          %figcaption
                            -# = current_user.nickname
                        %ul.-header-top__footer-login-content--mypage-review-listing
                          %li
                            -# = link_to '評価: 2', '#'
                          %li
                            -# = link_to "出品数: #{current_user.products.length}", listing_listing_mypage_index_path
                        %ul.-header-top__footer-login-content--mypage-sales-point
                          %li
                            = link_to '#' do
                              .mypage-list-left 売上金
                              .mypage-list-right
                                ¥0
                                = icon 'fas', 'chevron-right'
                          %li
                            = link_to '#' do
                              .l-left ポイント
                              .l-right
                                P0
                                = icon 'fas', 'chevron-right'
                      %ul.-header-top__footer-login-content--mypage-nav-list
                        %li
                          -# = link_to listing_listing_mypage_index_path, class: '-header-top__footer-login-content--mypage-nav-list-item' do
                            出品した商品 - 出品中
                            = icon 'fas', 'chevron-right'
                        %li
                          -# = link_to listing_in_progress_mypage_index_path, class: '-header-top__footer-login-content--mypage-nav-list-item' do
                            出品した商品 - 取引中
                            = icon('fas', 'chevron-right')
                        %li
                          -# = link_to listing_completed_mypage_index_path, class: '-header-top__footer-login-content--mypage-nav-list-item' do
                            出品した商品 - 売却済み
                            = icon('fas', 'chevron-right')
                        %li
                          -# = link_to '#', class: '-header-top__footer-login-content--mypage-nav-list-item' do
                            購入した商品 - 取引中
                            = icon('fas', 'chevron-right')
                        %li
                          -# = link_to '#', class: '-header-top__footer-login-content--mypage-nav-list-item' do
                            購入した商品 - 過去の取引
                            = icon('fas', 'chevron-right')
        - else
          .-header-top__footer-contents-wrapper
            .-header-top__footer-contents--new-register-btn
              -# = link_to '新規会員登録', signup_index_path
            .-header-top__footer-contents--user-login-btn
              -# = link_to 'ログイン', new_user_session_path
